<Page
    x:Class="Diary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Diary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!--文本框样式-->
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Width" Value="270"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="Height" Value="42" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="loginGrid">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Images/LoginBackground.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="249*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="316*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="400*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="user_TextBlock" Text="您好，用户" HorizontalAlignment="Center" Grid.Column="1" Width="Auto" Grid.ColumnSpan="2" Grid.Row="1" Margin="0,0,0,31" Grid.RowSpan="2"/>
        <TextBlock Name="psw_TextBlock" Text="请确认您是本人：" HorizontalAlignment="Center"  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Width="256" Margin="155,0,155,34" Grid.RowSpan="2"/>
        <Border  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Width="270">
            <PasswordBox x:ConnectionId='2' Name="psw_TextBox"                               HorizontalAlignment="Center" Password="" />
        </Border>
        <Border Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Width="200" Height="35">
            <Button x:ConnectionId='1' Name="Login_Btn"                         Width="202" Height="37" Content="Login"/>
        </Border>
        <TextBlock Name="wrong_TextBlock" Grid.Column="1" HorizontalAlignment="Center" TextAlignment="Center" Foreground="Yellow" FontSize="15" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="270" Grid.Row="4" Grid.ColumnSpan="2" Margin="148,0"/>
    </Grid>
</Page>

